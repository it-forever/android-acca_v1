<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="192.168.50.15" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Start Recording" />

    <Button
        android:id="@+id/echo_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Echo Testing" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Stop and exit" />

    <Button
        android:id="@+id/speechbutton"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="audio_for_text" />

    <Button
        android:id="@+id/connectws"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Подключится к websocket"
        android:text="CONNECT_WS" />

    <Button
        android:id="@+id/sendws"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Отправить данные на сервер."
        android:text="SEND_WS" />

    <Button
        android:id="@+id/sendmessagews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send_message_ws" />

    <Button
        android:id="@+id/closews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOSE_WS" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right" />

</LinearLayout>